<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1" >

    <TableRow
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/labelNomeItens"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_date_range_brown_300_24dp" />

        <EditText
            android:id="@+id/txtNome"
            android:layout_marginRight="10dp"
            android:hint="Nome"
            android:backgroundTint="@color/gray"
            android:layout_height="match_parent" />

    </TableRow>

    <TableRow>
        <ImageView
            android:id="@+id/labelDescricaoItens"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_low_priority_brown_400_24dp" />

        <EditText
            android:id="@+id/txtDescricaoItens"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/gray"
            android:layout_width="match_parent" />
    </TableRow>

    <TableRow>
        <ImageView
            android:id="@+id/labelValorItens"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_attach_money_brown_300_24dp" />

        <EditText
            android:id="@+id/textValorItens"
            android:inputType="numberDecimal"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/gray" />
    </TableRow>

    <TableRow>
        <ImageView
            android:id="@+id/labelSituacaoItens"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_low_priority_brown_400_24dp" />

        <Spinner
            android:id="@+id/spSituacaoItens"
            android:backgroundTint="@color/gray"
            android:layout_marginRight="10dp">
        </Spinner>
    </TableRow>




</TableLayout>
